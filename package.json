{
	"name": "vs-leet",
	"publisher": "abeshahsan",
	"displayName": "VS-Leet - LeetCode Integration",
	"description": "Complete LeetCode integration for VS Code - Browse, solve, test, and submit coding problems directly in your editor",
	"type": "module",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.104.0"
	},
	"categories": [
		"Programming Languages",
		"Education",
		"Other"
	],
	"keywords": [
		"leetcode",
		"algorithm",
		"interview",
		"coding",
		"practice",
		"competitive programming",
		"dsa",
		"data structures"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/abeshahsan/VS-Leet.git"
	},
	"bugs": {
		"url": "https://github.com/abeshahsan/VS-Leet/issues"
	},
	"license": "MIT",
	"galleryBanner": {
		"color": "#1e1e1e",
		"theme": "dark"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "webview.leetcode",
				"title": "LeetCode: Open Problem Browser",
				"category": "LeetCode",
				"icon": "$(home)"
			},
			{
				"command": "leet.signIn",
				"title": "Sign In to LeetCode",
				"category": "LeetCode",
				"icon": "$(account)"
			},
			{
				"command": "leet.signOut",
				"title": "Sign Out from LeetCode",
				"category": "LeetCode",
				"icon": "$(sign-out)"
			},
			{
				"command": "leet.openProblem",
				"title": "Open Problem",
				"category": "LeetCode"
			},
			{
				"command": "leet.filterEasy",
				"title": "Filter Easy Problems",
				"icon": "$(check-circle)"
			},
			{
				"command": "leet.filterMedium",
				"title": "Filter Medium Problems",
				"icon": "$(circle-large-outline)"
			},
			{
				"command": "leet.filterHard",
				"title": "Filter Hard Problems",
				"icon": "$(flame)"
			},
			{
				"command": "leet.clearFilter",
				"title": "Clear Filters",
				"icon": "$(clear-all)"
			},
			{
				"command": "leet.search",
				"title": "Search Problems",
				"icon": "$(search)"
			},
			{
				"command": "leet.filterByTag",
				"title": "Filter by Tag",
				"icon": "$(tag)"
			},
			{
				"command": "leet.addTag",
				"title": "Add Tag Filter",
				"icon": "$(tag)"
			},
			{
				"command": "leet.removeTag",
				"title": "Remove Tag Filter",
				"icon": "$(circle-slash)"
			},
			{
				"command": "leet.refresh",
				"title": "Refresh Problems",
				"icon": "$(refresh)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "leet",
					"title": "LeetCode",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"leet": [
				{
					"id": "leetView",
					"name": "LeetCode",
					"icon": "resources/icon.svg"
				}
			]
		},
		"viewsWelcome": [
			
		],
		"menus": {
			"view/title": [
				{
					"command": "leet.signIn",
					"when": "view == leetView && !leetcode.loggedIn",
					"group": "navigation@1"
				},
				{
					"command": "leet.signOut",
					"when": "view == leetView && leetcode.loggedIn",
					"group": "navigation@1"
				},
				{
					"command": "leet.refresh",
					"when": "view == leetView && leetcode.loggedIn",
					"group": "navigation@2"
				},
				{
					"command": "leet.clearFilter",
					"when": "view == leetView && viewItem == filtersRoot",
					"group": "navigation@3"
				}
			],
			"view/item/context": [
				{
					"command": "leet.removeTag",
					"when": "view == leetView && viewItem == tagItem",
					"group": "inline"
				}
			]
		},
		"customEditors": [
			{
				"viewType": "leetcode.problemView",
				"displayName": "LeetCode Problem Viewer",
				"selector": [
					{
						"filenamePattern": "*.leetcode-problem"
					}
				]
			},
			{
				"viewType": "leetcode.problemList",
				"displayName": "LeetCode Problems List",
				"selector": [
					{
						"filenamePattern": "*.leetcode-list"
					}
				]
			},
			{
				"viewType": "leetcode.problemSession",
				"displayName": "LeetCode Problem Session",
				"selector": [
					{
						"filenamePattern": "*.leetcode-session"
					}
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "VS-Leet",
			"properties": {
				"vs-leet.autoShow": {
					"type": "boolean",
					"default": false,
					"description": "Automatically show the problem browser when VS Code starts"
				},
				"vs-leet.solutionFolder": {
					"type": "string",
					"default": "Solutions",
					"description": "Folder name for storing solution files"
				},
				"vs-leet.defaultLanguage": {
					"type": "string",
					"default": "cpp",
					"enum": ["cpp", "java", "python3", "javascript", "typescript"],
					"description": "Default programming language for solutions"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test",
		"vscode:prepublish": "npm run build:web",
		"build:web": "cd web && npm install && npm run build",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/vscode": "^1.104.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.36.0",
		"postcss": "^8.5.6",
		"tailwindcss": "^3.4.18"
	},
	"dependencies": {
		"node-fetch": "^3.3.2",
		"playwright": "^1.56.0"
	}
}
